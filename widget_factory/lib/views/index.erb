<div class="flex center one two-500">
  <div>
    <table class="success">
      <thead>
        <tr>
          <th>Name</th>
          <th>Color</th>
        </tr>
      </thead>
      <tbody>
        <% @widgets.each do |widget| %>
          <tr>
            <td><%= widget[0] %></td>
            <td>
              <span class="label" style="background-color: <%= widget[1] %>;">
                <%= widget[1] %>
              <span>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div>
    <article class="card">
      <header>
        <h2>New Widget</h2>
      </header>
      <footer>
        <form action="/" method="post">
          <label>
            Name
            <input type="text" name="name" id="name" required>
          </label>
          <label>
            Color
            <input type="text" name="color" id="color" required>
          </label>
          <input type="submit" value="Submit">
        </form>
      </footer>
    </article>
  </div>
</div>
